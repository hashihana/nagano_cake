<h1>商品新規登録</h1>
  <%= form_with model: @item, url: admin_items_path do |f| %>
  
      <%= f.label :image, "商品画像" %>
      <%= f.file_field :image, accept: "image/*" %>
   
      <%= f.label :name, "商品名" %>
      <%= f.text_field :name %>
      
     <%= f.label :name, "商品説明" %>
      <%= f.text_area :introduction %>
  
     <%= f.label:genre_id, "ジャンル" %>
       <%= f.collection_select :genre_id, Genre.all, :id,:name,{prompt: "--選択してください--"} %>
      
      <div>
      <%= f.label :price, "税抜価格" %>
      <%= f.text_field :price %>円
      </div>
      
      <%= f.label :is_active, "販売ステータス" %>
      <%= f.select :is_active,[["販売中",true],["販売停止中",false]],include_blank: "選択して下さい" %>
      
    <%= f.submit "新規登録", class: "btn btn-primary pull-right" %>
  <% end %>