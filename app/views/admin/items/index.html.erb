
<div class="container">
  <h1>商品一覧</h1>
  <div class="row justify-content-center">
     <div class="col-8">
       <div class="new_item">
       <li><%= link_to "商品新規登録", new_admin_item_path %></li>
       </div>
<table class="table item-table">
<thead>
  <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <!--<th>ジャンル</th>-->
      <th>ステータス</th>
 </tr>
</thead>
<tbody>
  <% @items.each do |item| %>
<tr>
        <td><%= item.id %></td>
        <td><%= link_to item.name,admin_item_path(item) %></td>
        <td><%= item.price.to_s(:delimited) %></td>
        <!--<td><%#= item.genre.name %></td>-->
       <td>
           <!--<%# if item.is_active == true %>-->
           <%if item.is_active %>
               販売中
              <% else %>
               <%=  "販売停止中" %>
              <% end %>
           </td>
  </tr>
          <% end %>
          </tbody>
        </table>
        <%= paginate @items %>

    </div>
</div>