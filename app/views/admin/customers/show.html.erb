
<h1><%= @customer.last_name + @customer.first_name) %>さんの会員詳細</h1>

<div>
      <p>
      <strong>会員ID</strong><%= @customer.id %>
      </p>

</div>

<div>
  <p>
    <strong>氏名</strong><%= @customer.last_name + @customer.first_name %>
  </p>
</div>

<div>
  <p>
    <strong>フリガナ</strong><%= @customer.last_name_kana + @customer.first_name_kana %>
  </p>
</div>

<div>
  <p>
    <strong>郵便番号</strong><%= @customer.postal_code %>
  </p>
</div>

<div>
  <p>
    <strong>住所</strong><%= @customer.address %>
  </p>
</div>

<div>
  <p>
    <strong>電話番号</strong><%= @customer.telephone_number %>
  </p>
</div>

<div>
  <p>
    <strong>メールアドレス</strong><%= @customer.email %>
  </p>
</div>

<div>
  <p>
    <strong>会員ステータス</strong>
     <% if customer.is_deleted %>
        退会
     <% else %>
        有効
      <% end %>
  </p>
</div>

    <span>
      <%= link_to "編集する", edit_admin_customer_path(@customer), class: "btn btn-primary" %>
	  </span>
