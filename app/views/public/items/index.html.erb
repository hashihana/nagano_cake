<div class="container">
  <div class="row">
    <div class="col-md-3">
  </div>
  <div class="col-md-9" >
    <h1 class="product-title">商品一覧</h1>
    <strong> 全<%= @items.count %>件 </strong>
    <div class="products-list d-flex flex-row">
      <% @items.each do |item| %>
        <div class="products-list-item">
          <%= link_to item_path(item) do %>
            <%= image_tag item.get_image(190,150) %><br>
          <% end %>
          <%= item.name %><br>
          ¥<%= (item.price*1.1).floor.to_s(:delimited)%>(税込)
        </div>
      <% end %>
    </div>
    <%= paginate @items %>
  </div>
</div>