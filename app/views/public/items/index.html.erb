<div class="container">
  <div class="row">
    <div class="col-md-3">
    </div>
    <div class="col-md-9" >
      <h1 class="product-title">
          商品一覧
      </h1>
      <strong> 全<%= @items.count %>件 </strong>
      <div class="products-list">
        <% @items.each do |item| %>
            <div class="products-list-item">
              <%= link_to items_path(item) do %>
                <%= attachment_image_tag item, :image, fallback: 'no_image.jpg',size: "190x150" %><br>
              <% end %>
              <%= item.name %><br>
              ¥<%= (item.price*1.1).floor.to_s(:delimited)%>(税込)
            </div>
          <% end %>
        <% end %>
      </div>
      <%= paginate @items %>
    </div>
  </div>
</div>